    <navMap role="book:h">
        <target href="aURI" ord="1">
            <label>
                <text>Label Text</text>
                <audio src="aURI" clipBegin="0.0" clipEnd="0.2"/>
                <image src="aURI"/>
            </label>
            <target href="aURI" ord="3" targetRole="h" >
                <label>
                    <text>Label Text</text>
                    <audio src="aURI" clipBegin="0.0" clipEnd="0.2"/>
                    <image src="aURI"/>
                </label>
                <label xml:lang="it">
                    <text>Il texto di labelo</text>
                    <audio src="aURI" clipBegin="0.0" clipEnd="0.2"/>
                    <image src="aURI"/>
                </label>
            </target>
        </target>
    </navMap>
    
    <navList role="book:pagebreak"> <!-- role here means all target children inherit unless explicitly overridden using @targetRole -->
        <label><text>pages</text></label>
