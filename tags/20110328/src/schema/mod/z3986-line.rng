    </info>
    <div>
        <define name="z3986.ln" xml:id="z3986.ln">
            <element name="ln">
                <annotation annotates=".." condition="required" xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="ln">The {ln} element</title>
                    <para role="desc-main">The {ln} element represents a single line of text.</para>
                    <para role="desc-sub">The {[[#z3986.lnum]]} element can be added to the start of the {ln} to represent numbered lines.</para>
                    <synopsis role="def-context">{[[#z3986.Phrase.class]]}</synopsis>
                    <synopsis role="def-content">{(text | [[#z3986.Text.class]] | [[#z3986.Phrase.class]])+ &amp;amp; [[#z3986.lnum]]?}</synopsis>
                    <synopsis role="def-attlist">{[[#z3986.Phrase.attrib]]}</synopsis>
                </annotation>
                <ref name="z3986.ln.attlist"/>
                <ref name="z3986.ln.content"/>
                <sch:rule context="default:ln">
                    <sch:assert test="not(descendant::default:ln)">The {ln} element must not contain descendant {ln} elements.</sch:assert>
                    <sch:assert test="normalize-space(.) or *">The {ln} element must neither be empty nor contain only whitespace.</sch:assert>
                </sch:rule>
            </element>
        </define>
        <define name="z3986.ln.attlist" xml:id="z3986.ln.attlist">
            <ref name="z3986.Phrase.attrib"/>
        </define>
        <define name="z3986.ln.content" xml:id="z3986.ln.content">
            <interleave>
                <ref name="z3986.Phrase.Text.mix.model"/>
                <optional>
                    <ref name="z3986.lnum"/>
                </optional>
            </interleave>
        </define>
    </div>
    <div>
        <define name="z3986.lnum" xml:id="z3986.lnum">
            <element name="lnum">
                <annotation annotates=".." xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="lnum">The {lnum} element</title>
                    <para role="desc-main">The {lnum} element represents the line number of the parent {[[#z3986.ln]]}.</para>
                    <para role="desc-sub doc-only">Line numbers are a common convention in poetic works, legal texts and programming code.</para>
                    <synopsis role="def-context" condition="fixed">{[[#z3986.ln]]}</synopsis>
                    <synopsis role="def-content">{(text | [[#z3986.Text.class]])+}</synopsis>
                    <synopsis role="def-attlist">{[[#z3986.Text.attrib]]}</synopsis>
                </annotation>
                <ref name="z3986.lnum.attlist"/>
                <ref name="z3986.lnum.content"/>
                <sch:rule context="default:lnum">
                    <sch:assert test="normalize-space(.) or *">The {lnum} element must neither be empty nor contain only whitespace.</sch:assert>
                </sch:rule>
            </element>
        </define>
        <define name="z3986.lnum.attlist" xml:id="z3986.lnum.attlist">
            <ref name="z3986.Text.attrib"/>
        </define>
        <define name="z3986.lnum.content" xml:id="z3986.lnum.content">
            <ref name="z3986.Text.model"/>
        </define>
    </div>
    <div>
        <define name="z3986.lngroup" xml:id="z3986.lngroup">
            <element name="lngroup">
                <annotation annotates=".." xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="lngroup">The {lngroup} element</title>
                    <para role="desc-main">The {lngroup} element represents a group of [[#z3986.ln lines]].</para>
                    <synopsis role="def-context">No default context.</synopsis>
                    <synopsis role="def-content" condition="The content model must allow {[[#z3986.ln ln]]} elements.">{[[#z3986.ln]]+}</synopsis>
                    <synopsis role="def-attlist">{[[#z3986.Block.attrib]]}</synopsis>
                </annotation>
                <ref name="z3986.lngroup.attlist"/>
                <ref name="z3986.lngroup.content"/>
            </element>
        </define>
        <define name="z3986.lngroup.attlist" xml:id="z3986.lngroup.attlist">
            <ref name="z3986.Block.attrib"/>
        </define>
        <define name="z3986.lngroup.content" xml:id="z3986.lngroup.content">
            <interleave>
                <oneOrMore>
                    <ref name="z3986.ln"/>
                </oneOrMore>
                <zeroOrMore>
                    <ref name="z3986.lngroup.content.extra.class"/>
                </zeroOrMore>
            </interleave>
        </define>
        <define name="z3986.lngroup.content.extra.class" combine="choice">
            <ref name="z3986.Global.extra.class"/>
        </define>
    </div>
    <div>
        <a:documentation>line - default content model contribution</a:documentation>
        <define name="z3986.Phrase.core.class" combine="choice">
            <ref name="z3986.ln"/>
        </define>
        <define name="z3986.table.td.Block.class" combine="choice">
            <ref name="z3986.ln"/>
        </define>
    </div>
</grammar>
