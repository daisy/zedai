    </info>
    <div>
        <define name="z3998.emph" xml:id="z3998.emph">
            <element name="emph">
                <annotation annotates=".." condition="required" xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="emph (phrase)">The {emph} element (Phrase)</title>
                    <para role="desc-main" xlink:role="inherit-common" xlink:href="z3998.emph"/>
                    <para role="desc-sub" xlink:role="inherit-common" xlink:href="z3998.emph"/>
                    <synopsis role="def-context">{[[#z3998.Phrase.class]]}</synopsis>
                    <synopsis role="def-content">{(text | [[#z3998.Text.class]] | Phrase.core.class | Phrase.extern.class)+}</synopsis>
                    <synopsis role="def-attlist">{[[#z3998.Phrase.attrib]]}</synopsis>
                </annotation>
                <ref name="z3998.emph.attlist"/>
                <ref name="z3998.emph.content"/>
                <sch:rule context="default:emph">
                    <sch:assert test="normalize-space(.) or *">The {emph} element must neither be empty nor contain only whitespace.</sch:assert>
                </sch:rule>
            </element>
        </define>
        <define name="z3998.emph.attlist" xml:id="z3998.emph.attlist">
            <ref name="z3998.Phrase.attrib"/>
        </define>
        <define name="z3998.emph.content" xml:id="z3998.emph.content">
            <ref name="z3998.Phrase.core.Text.mix.model"/>
        </define>
    </div>
    <div>
        <define name="z3998.emph.text" xml:id="z3998.emph.text">
            <element name="emph">
                <annotation annotates=".." condition="optional" xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="emph (text)">The {emph} element (Text)</title>
                    <para role="desc-main" xlink:role="inherit-common" xlink:href="z3998.emph"/>
                    <para role="desc-sub" xlink:role="inherit-common" xlink:href="z3998.emph"/>
                    <synopsis role="def-context">{[[#z3998.Text.class]]}</synopsis>
                    <synopsis role="def-content">{(text | [[#z3998.Text.class]])+}</synopsis>
                    <synopsis role="def-attlist">{[[#z3998.Text.attrib]]}</synopsis>
                </annotation>
                <ref name="z3998.emph.text.attlist"/>
                <ref name="z3998.emph.text.content"/>
            </element>
        </define>
        <define name="z3998.emph.text.attlist" xml:id="z3998.emph.text.attlist">
            <ref name="z3998.Text.attrib"/>
        </define>
        <define name="z3998.emph.text.content" xml:id="z3998.emph.text.content">
            <ref name="z3998.Text.model"/>
        </define>
    </div>
    <div>
        <a:documentation>emph - default content model contribution</a:documentation>
        <define name="z3998.Phrase.core.class" combine="choice">
            <ref name="z3998.emph"/>
        </define>
        <define name="z3998.Text.variant.class" combine="choice">
            <ref name="z3998.emph.text"/>
        </define>
    </div>
</grammar>
