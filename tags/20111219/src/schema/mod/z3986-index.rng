    <info xmlns="http://docbook.org/ns/docbook">
        <title xreflabel="index">The index module</title>
        <annotation annotates="/">
            <para role="desc-main">This module defines the {[[#z3986.index]]} element for structuring indices.</para>
            <simplelist role="def-dependencies">
                <member xlink:href="z3986-global-classes.rng"/>
                <member xlink:href="z3986-headings.rng"/>
                <member xlink:href="z3986-p.rng"/>
                <member xlink:href="z3986-block.rng"/>
            </simplelist>
        </annotation>
