        <title xreflabel="article">The article module</title>
        <annotation annotates="/">
            <para role="desc-main">This module defines the [[#z3986.article]] element for the inclusion and embedding of articles.</para>
            <simplelist role="def-dependencies">
                <member xlink:href="z3986-global-classes.rng"/>
