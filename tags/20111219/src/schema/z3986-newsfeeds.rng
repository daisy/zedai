  <x:h1>RELAX NG driver for Z39.86-2012 Newsfeed Aggregator Profile</x:h1>
  
  <x:h2>Common Document Model Modules</x:h2>

  <x:h3>Content Model Definitions</x:h3>
  <include href="./mod/z3986-global-classes.rng" />    
  
  <x:h3>Common Elements</x:h3>    
  <include href="./mod/z3986-document.rng">
    <!-- redefine body content to be either sections or articles -->
    <define name="z3986.body.content">
      <ref name="z3986.newsfeeds.body.content"/>
    </define>
    <sch:rule context="default:head[parent::default:document]">
      <sch:assert test="descendant::default:meta[@rel='z3986:rdfa-context' and @resource='http://www.daisy.org/z3986/2012/vocab/context/periodicals/']">The default RDFa context document URI {http://www.daisy.org/z3986/2012/vocab/context/default/} must be defined in the {resource} attribute of a {meta} element with the {rel} value {z3986:rdfa-context}.</sch:assert>
    </sch:rule>
  </include>  
  <div>
    <include href="./mod/z3986-meta.rng"/>
    <!-- validate metadata -->
    <sch:rule context="default:meta[@property='revision']">
      <sch:assert test="matches(@content, '^\d+(\.\d+)*$')">The {revision} property value must be a decimal-delimited series of integers when specified.</sch:assert>
    </sch:rule>
    <sch:rule context="default:meta[@property='positionSequence']">
      <sch:assert test="matches(@content, '^\d+(\.\d+)*$')">The {positionSequence} property value must be a decimal-delimited series of integers when specified.</sch:assert>
    </sch:rule>
  </div>
  <include href="./mod/z3986-linking.rng"/>   
      
  <include href="./mod/z3986-section.rng">
    <!-- redefine section to only allow sections or articles -->
    <define name="z3986.section.content">
      <ref name="z3986.newsfeeds.section.strict.content"/>
    </define>  
  </include>
  <include href="./mod/z3986-headings.rng">
      <!--  remove hpart -->
      <define name="z3986.hpart">
      	<notAllowed/>     
    </define>
  </include>
  <include href="./mod/z3986-block.rng"/>
  <include href="./mod/z3986-p.rng"/>        
  <include href="./mod/z3986-list.rng"/>          
  <include href="./mod/z3986-table.rng">
    <!-- redefine table to the simplest model -->
    <define name="z3986.table.content">
