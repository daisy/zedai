    <div>
        <define name="z3986.meta" xml:id="z3986.meta">
            <element name="meta">
                <annotation annotates=".." condition="required" xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="meta">The {meta} element</title>
                    <para role="desc-main">The {meta} element expresses metadata information about the document, a document fragment or an external resource associated with the document.</para>
                    <para role="desc-sub absdef-only">The {meta} element accepts attributes from the [[#Rdfa.attrib RDFa attributes collection]] for capturing the metadata information.</para>
                    <synopsis role="def-context">{[[#z3986.head]]}</synopsis>
                    <synopsis role="def-content">{empty | z3986.meta+ | (text | z3986.Text.class | z3986.Phrase.class)+}</synopsis>
                    <synopsis role="def-attlist" condition="The attribute model must allow the {[[#Rdfa.attrib RDFa]]} attributes.">{[[#Rdfa.attrib]]}, {[[#z3986.I18n.attrib]]} and {[[#z3986.Core.attrib]]}</synopsis>
                </annotation>
                <ref name="z3986.meta.attlist.content"/>
                <sch:rule context="default:meta[@content]">
                    <sch:assert test="string-length(normalize-space(@content)) &gt; 0">The meta {content} attribute must neither be empty nor contain only whitespace.</sch:assert>
                </sch:rule>
            </element>
        </define>
        <define name="z3986.meta.attlist.content" xml:id="z3986.meta.attlist.content">
            <ref name="z3986.Core.attrib"/>
            <ref name="z3986.I18n.attrib"/>
            <!-- @rel+@resource @rev+@resource @property+@content @about+@property+@content @about+@typeof+@content @property+/content @about+@property+/content @about+@typeof+/content @typeof -->
            <choice>
                <group>
                    <ref name="rdfa.rel.attrib"/>
                    <ref name="rdfa.resource.attrib"/>
                    <zeroOrMore>
                        <ref name="z3986.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.rev.attrib"/>
                    <ref name="rdfa.resource.attrib"/>
                    <zeroOrMore>
                        <ref name="z3986.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="rdfa.content.attrib"/>
                    <zeroOrMore>
                        <ref name="z3986.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="rdfa.content.attrib"/>
                    <zeroOrMore>
                        <ref name="z3986.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.typeof.attrib"/>
                    <ref name="rdfa.content.attrib"/>
                    <zeroOrMore>
                        <ref name="z3986.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="z3986.Phrase.Text.mix.model"/>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="z3986.Phrase.Text.mix.model"/>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.typeof.attrib"/>
                    <ref name="z3986.Phrase.Text.mix.model"/>
                </group>
                <group>
                    <ref name="rdfa.typeof.attrib"/>
                    <zeroOrMore>
                        <ref name="z3986.meta"/>
                    </zeroOrMore>
                </group>
                <ref name="rdfa.typeof.attrib"/>
            </choice>
        </define>
        <define name="z3986.meta.attlist.base" xml:id="z3986.meta.attlist.base">
            <ref name="Rdfa.attrib"/>
            <ref name="z3986.Core.attrib"/>
            <ref name="z3986.I18n.attrib"/>
        </define>
        <define name="z3986.meta.content.base" xml:id="z3986.meta.content.base">
            <choice>
                <empty/>
                <zeroOrMore>
                    <ref name="z3986.meta"/>
                </zeroOrMore>
                <ref name="z3986.Phrase.Text.mix.model"/>
            </choice>
        </define>
    </div>
</grammar>
