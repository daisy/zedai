	<div>
		<define name="z3986.aside.section" xml:id="z3986.aside.section">
			<element name="aside">
				<annotation annotates=".." condition="required" xmlns="http://docbook.org/ns/docbook">
					<title xreflabel="aside (section)">The {aside} element (Section)</title>
					<para role="desc-main" xlink:role="inherit-common" xlink:href="z3986.aside"/>
					<para role="desc-sub">The {Section} variant is an adaptation for use with asides that contain structured content.</para>
					<para role="desc-sub" xlink:role="inherit-common" xlink:href="z3986.aside"/>
					<synopsis role="def-context">{[[#z3986.section]]}</synopsis>
					<synopsis role="def-content">{[[#z3986.h]]?, (z3986.Section.model)+}</synopsis>
					<synopsis role="def-attlist">{[[#z3986.Section.attrib]], [[#z3986.ref.attrib]]}</synopsis>
				</annotation>
				<ref name="z3986.aside.section.attlist"/>
				<ref name="z3986.aside.section.content"/>
				<sch:rule context="default:aside">
					<sch:assert test="normalize-space(.) or *">The {aside} element must neither be empty nor contain only whitespace.</sch:assert>
				</sch:rule>
			</element>
		</define>
		<define name="z3986.aside.section.attlist" xml:id="z3986.aside.section.attlist">
			<!-- this is Section.attrib expanded out to allow contributions to @role -->
			<ref name="z3986.global.core.attrib"/>
			<ref name="z3986.Section.extern.attrib"/>
			<optional>
				<ref name="z3986.aside.role.attrib"/>
			</optional>
		</define>
		<define name="z3986.aside.role.attrib" xml:id="z3986.aside.role.attrib">
			<attribute name="role">
				<ref name="z3986.aside.role.attrib.content"/>
			</attribute>
		</define>
		<define name="z3986.aside.role.attrib.content" combine="choice">
			<choice>
				<ref name="CURIEs.datatype"/>
			</choice>
		</define>
		<define name="z3986.aside.section.content" xml:id="z3986.aside.section.content">
			<optional>
				<ref name="z3986.h"/>
			</optional>
			<ref name="z3986.Section.model"/>
		</define>
	</div>
	<div>
        <define name="z3986.aside" xml:id="z3986.aside">
            <element name="aside">
                <annotation annotates=".." condition="required" xmlns="http://docbook.org/ns/docbook">
                    <title xreflabel="aside (block)">The {aside} element (Block)</title>
                    <para role="desc-main" xlink:role="inherit-common" xlink:href="z3986.aside"/>
                    <para role="desc-sub">The {Block} variant is an adaptation for use with asides that contain unstructured content.</para>
                    <para role="desc-sub" xlink:role="inherit-common" xlink:href="z3986.aside"/>
                    <synopsis role="def-context">{[[#z3986.Block.class]]}</synopsis>
                    <synopsis role="def-content">{(z3986.Block.class)+ | (text | z3986.Text.class | z3986.Phrase.class)+}</synopsis>
                    <synopsis role="def-attlist">{[[#z3986.Block.attrib]], [[#z3986.ref.attrib]]}</synopsis>
                </annotation>
                <ref name="z3986.aside.attlist"/>
                <ref name="z3986.aside.content"/>
            </element>
        </define>
        <define name="z3986.aside.attlist" xml:id="z3986.aside.attlist">
            <!-- this is Block.attrib expanded out to allow contributions to @role -->
            <ref name="z3986.global.core.attrib"/>
            <ref name="z3986.Block.extern.attrib"/>
            <optional>
                <ref name="z3986.aside.role.attrib"/>
            </optional>
        </define>
        <define name="z3986.aside.content" xml:id="z3986.aside.content">
            <ref name="z3986.Flow.choice.model"/>
        </define>
    </div>
    <div>
        <a:documentation>aside - default content model contribution</a:documentation>
        <define name="z3986.section.Section.content.class" combine="choice">
    	    <ref name="z3986.aside.section"/>
        </define>
        <define name="z3986.Block.core.class" combine="choice">
            <ref name="z3986.aside"/>
        </define>
        <define name="z3986.index.extra.class" combine="choice">
            <ref name="z3986.aside"/>
        </define>
        <define name="z3986.bibliography.extra.class" combine="choice">
            <ref name="z3986.aside"/>
        </define>
        <define name="z3986.glossary.extra.class" combine="choice">
            <ref name="z3986.aside"/>
        </define>
    </div>
</grammar>
